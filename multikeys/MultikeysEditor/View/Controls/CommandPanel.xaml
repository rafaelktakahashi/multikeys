<UserControl x:Class="MultikeysEditor.View.Controls.CommandPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultikeysEditor.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="382" d:DesignWidth="280"
             MinHeight="200" MaxWidth="280">

    <UserControl.Resources>
        <TextBlock x:Key="Title" x:Shared="false" Foreground="Blue" FontSize="18" FontWeight="Bold" Margin="10, 5, 10, 0" />
        <TextBlock x:Key="Content" x:Shared="false" FontSize="16" Margin="10, 5, 10, 0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow" />
    </UserControl.Resources>

    <Grid>
        <Rectangle Margin="0,0,0,0" Stroke="Black" StrokeThickness="3" RadiusX="4" RadiusY="4" Fill="White" Opacity="0.625" Panel.ZIndex="-1" />
        <StackPanel x:Name="StackPanelData" Panel.ZIndex="0">
            
        </StackPanel>
    </Grid>
</UserControl>
